      div.user-details.hide-element
        div.trigger-text
          | {{_'r-by'}}
        div.trigger-dropdown
          input(class="user-name",type=text,placeholder="{{_'username'}}")
    div.trigger-button.js-add-spec-label-trigger.js-goto-action
      i.fa.fa-plus

