template(name="ruleDetails")
  .rules
    h2
      i.fa.fa-magic
      | {{_ 'r-rule-details' }}
    .triggers-content
        .triggers-body
            .triggers-main-body
                h4
                  | {{_ 'r-trigger'}}
                div.trigger-item
                    div.trigger-content
                        div.trigger-text 
                        = trigger
                h4 
                  | {{_ 'r-action'}}
                div.trigger-item
                    div.trigger-content
                        div.trigger-text 
                        = action 
    div.rules-back
        button.js-goback
          i.fa.fa-chevron-left
          | {{_ 'back'}}
